extends ../layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 TODO TEAM
        form(method='POST' action='create?redirect='+page)
          select(name="selectUser")
            option(value="")
            each user in team
              option(value=user._id) #{user.username}
          div.form-group
            label(for='messageTeam') Message
            input.form-control(type='text' id='messageTeam' placeholder='message' name='messageTeam')
            input.form-control(type='hidden' id='teamId' value=teamId name='teamId')
          button.btn.btn-primary(type='submit') Create todo
